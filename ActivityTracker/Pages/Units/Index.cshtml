@page
@model ActivityTracker.Pages.Units.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Units</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.UnitNameSort">
                    @Html.DisplayNameFor(model => model.Unit[0].UnitName)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Unit)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.UnitId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.UnitId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.UnitId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
